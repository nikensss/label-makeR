{
  "name": "functions",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,storage --import ./emulators/data --export-on-exit",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run serve",
    "tag:add": "git tag functions && git push origin functions",
    "tag:delete": "git tag -d functions && git push origin --delete functions",
    "tag:update": "npm run tag:delete && npm run tag:add",
    "deploy": "firebase deploy --only functions",
    "postdeploy": "npm run tag:update",
    "logs": "firebase functions:log",
    "pretty": "prettier --write 'src/**/*.ts'",
    "pretty:check": "prettier --check 'src/**/*.ts'",
    "prepareHusky": "husky install"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/clone": "^2.1.1",
    "axios": "^0.24.0",
    "clone": "^2.1.2",
    "cors": "^2.8.5",
    "date-fns": "^2.26.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "3.19.0",
    "form-data": "^4.0.0",
    "mailgun.js": "^4.1.0",
    "stripe": "^8.188.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^14.18.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.2.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  },
  "private": true
}
